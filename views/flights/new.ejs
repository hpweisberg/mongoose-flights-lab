<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <section class="main-container">
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-input">
      <option value="American">American</option>
      <option value="JetBlue">JetBlue</option>
      <option value="United">United</option>
      <option value="Southwest">Southwest</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-input">
      <option value="AUS">AUS</option>
      <option value="DEN" selected>DEN</option>
      <option value="DFW">DFW</option>
      <option value="JFK">JFK</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-Number-input">Flight Number:</label>
    <input name="flightNo" id="flight-Number-input">
    <label for="departs-input">Departs:</label>
    <input type="datetime-local" name="departs" id="departs-input" value="<%= dateOfFlight %>">
    <button type="submit">Add Flight</button>
  </form>
</section>
</main>


<%- include("../partials/footer") %>